<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.cocodev.TheDuChronicle.Events">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/events_scrollView"
        android:layout_alignParentBottom="true"
        >

        <android.support.design.widget.TabLayout
            android:id="@+id/events_tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:paddingTop="4dp"
            app:tabIndicatorColor="#fff"
            app:tabMode="scrollable"
            app:tabTextAppearance="@style/TabText"
            app:tabSelectedTextColor="#ffffff"
            app:theme="@style/TabLayout"
            />
    </ScrollView>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/events_viewPager"
        android:layout_above="@+id/events_scrollView"
        android:layout_alignParentStart="true"
        >
    </android.support.v4.view.ViewPager>



</RelativeLayout>
